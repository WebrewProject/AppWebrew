{{ form_start(form) }}
     <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.title) }}
        </div>
        <div class="col-md-4" id="some-custom-id">
            {{ form_row(form.sector) }}
        </div>
         <div class="col-md-4" id="some-custom-id">
            {{ form_row(form.salary) }}
        </div>
         <div class="col-md-4" id="some-custom-id">
            {{ form_row(form.contract_type) }}
        </div>
         <div class="col-md-12" id="some-custom-id">
            {{ form_row(form.description) }}
        </div>
         <div class="col-md-12" id="some-custom-id">
            {{ form_row(form.tags) }}
        </div>
    </div>
    <button class="btn btn-primary">{{ button_label|default("Ajouter l'offre") }}</button>
{{ form_end(form) }}
